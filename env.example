# Hey Nova Environment Variables
# Copy this file to .env and fill in your actual values

# OpenAI API Key (required for LLM responses)
OPENAI_API_KEY=your_openai_api_key_here

# Notion Integration (optional for MVP, required for future features)
NOTION_API_KEY=your_notion_integration_token_here
NOTION_DATABASE_ID=your_notion_database_id_here

# Voice Settings (optional, will use defaults if not set)
# NOVA_VOICE_NAME=Victoria
# NOVA_VOICE_RATE=0.5
# NOVA_VOICE_PITCH=1.0

# Audio Settings (optional, will use defaults if not set)
# NOVA_SAMPLE_RATE=16000
# NOVA_RECORD_SECONDS=5

# LLM Settings (optional, will use defaults if not set)
# NOVA_LLM_MODEL=gpt-3.5-turbo
# NOVA_MAX_TOKENS=150
# NOVA_TEMPERATURE=0.7
